    {
      "name": "Auth - Register",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Login OK\", function () {\r",
              "  pm.response.to.have.status(200);\r",
              "});\r",
              "\r",
              "const json = pm.response.json();\r",
              "\r",
              "// Guardar token en el environment\r",
              "pm.environment.set(\"jwtToken\", json.data.accessToken);\r",
              "pm.environment.set(\"tokenType\", json.data.tokenType);"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\r\n  \"username\": \"admin\",\r\n  \"password\": \"admin123\"\r\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
